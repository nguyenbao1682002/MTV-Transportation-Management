@model QLPhuongTien.Models.PhuongTien

@{
    ViewBag.Title = "Tạo mới Phương tiện";
    ViewBag.PageTitle = "Tạo mới Phương tiện";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div>
    @Html.ActionLink("Trở lại danh sách", "Index")
</div>
@using (Html.BeginForm("LuuPhuongTien","PhuongTien",FormMethod.Post))
{
    <div class="card">
        <div class="card-body">



            @Html.AntiForgeryToken()

            <div class="col-md-12">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group row">
                    @Html.LabelFor(model => model.MA_LOAI_PTIEN, new { @class = "col-form-label text-md-right col-md-2" })
                    <div class="col-md-4">
                        @Html.DropDownListFor(model => model.MA_LOAI_PTIEN, ViewBag.LoaiPhuongTienList as IEnumerable<SelectListItem>, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.MA_LOAI_PTIEN, "", new { @class = "text-danger" })
                    </div>
                </div>


                <div class="form-group row">
                    @Html.LabelFor(model => model.TEN_PTIEN, htmlAttributes: new { @class = "col-form-label text-md-right col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.TEN_PTIEN, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.TEN_PTIEN, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group row">
                    @Html.LabelFor(model => model.BKS, htmlAttributes: new { @class = "col-form-label text-md-right col-md-2" })
                    <div class="col-md-4">
                        @Html.EditorFor(model => model.BKS, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.BKS, "", new { @class = "text-danger" })
                    </div>


                    @Html.LabelFor(model => model.MA_LOAI_NLIEU, htmlAttributes: new { @class = "col-form-label text-md-right col-md-2" })
                    <div class="col-md-4">
                        @Html.DropDownListFor(model => model.MA_LOAI_NLIEU, ViewBag.LoaiNhienLieuList as SelectList, new { @class = "form-control" ,disabled = "disabled" })
                        @Html.ValidationMessageFor(model => model.MA_LOAI_NLIEU, "", new { @class = "text-danger" })
                    </div>

                </div>

                <div class="form-group row">
                    @Html.LabelFor(model => model.NUOC_SXUAT, htmlAttributes: new { @class = "col-form-label text-md-right col-md-2" })
                    <div class="col-md-4">
                        @Html.EditorFor(model => model.NUOC_SXUAT, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.NUOC_SXUAT, "", new { @class = "text-danger" })
                    </div>

                    @Html.LabelFor(model => model.HANG_SXUAT, htmlAttributes: new { @class = "col-form-label text-md-right col-md-2" })
                    <div class="col-md-4">
                        @Html.EditorFor(model => model.HANG_SXUAT, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.HANG_SXUAT, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group row">
                    @Html.LabelFor(model => model.SO_KHUNG, htmlAttributes: new { @class = "col-form-label text-md-right col-md-2" })
                    <div class="col-md-4">
                        @Html.EditorFor(model => model.SO_KHUNG, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.SO_KHUNG, "", new { @class = "text-danger" })
                    </div>

                    @Html.LabelFor(model => model.SO_MAY, htmlAttributes: new { @class = "col-form-label text-md-right col-md-2" })
                    <div class="col-md-4">
                        @Html.EditorFor(model => model.SO_MAY, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.SO_MAY, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group row">
                    @Html.LabelFor(model => model.MA_TSAN, htmlAttributes: new { @class = "col-form-label text-md-right col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.MA_TSAN, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.MA_TSAN, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group row">
                    @Html.LabelFor(model => model.GHI_CHU, htmlAttributes: new { @class = "col-form-label text-md-right col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.GHI_CHU, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.GHI_CHU, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group row">
                    @Html.LabelFor(model => model.NGAY_HLUC, htmlAttributes: new { @class = "col-form-label text-md-right col-md-2" })
                    <div class="col-md-4">
                        @Html.EditorFor(model => model.NGAY_HLUC, new { htmlAttributes = new { @class = "form-control", @type = "date" } })
                        @Html.ValidationMessageFor(model => model.NGAY_HLUC, "", new { @class = "text-danger" })
                    </div>

                    @Html.LabelFor(model => model.TRANG_THAI, htmlAttributes: new { @class = "col-form-label text-md-right col-md-2" })
                    <div class="col-md-4">
                        @Html.DropDownListFor(model => model.TRANG_THAI, ViewBag.TrangThaiList as SelectList, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.TRANG_THAI, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group row">
                    @Html.Label("", "File đính kèm", new { @class = "col-form-label text-md-right col-md-2" })
                    <div class="col-md-10">
                        <button type="button" id="btnFileUpload" class="btn btn-danger"><i class="fas fa-plus"></i></button>
                        <div class="table-responsive mt-2">
                            <table id="tblFile" class="table table-hover table-striped btnRemoveFile">
                                <tbody>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
            <div class="form-group row">
                <div class="offset-md-3 col-md-9">
                    <input type="submit" name="action" value="Lưu" class="btn btn-danger" />
                    <input type="submit" name="action" value="Xóa" class="btn btn-danger" onclick="return confirm('Xóa dữ liệu?');" />
                </div>
            </div>
            </div>
        </div>
   
    <div id="dvFileUpload" class="modal">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <span class="modal-title">Thông tin file đính kèm</span>
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>
                <div class="modal-body">
                    <div class="col-md-12">
                        <div class="form-group row">
                            <label class="col-md-3">File</label>
                            <div class="col-md-9">
                                <input type="file" id="fuFile" class="form-control" />
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-md-3">Mô tả</label>
                            <div class="col-md-9">
                                <input type="text" id="inputMoTa" class="form-control" />
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" id="btnLuuFile" class="btn btn-primary">Lưu</button>
                    <button type="button" id="btnCloseModal" class="btn btn-default" data-dismiss="modal">Đóng</button>
                </div>
            </div>
        </div>
    </div>
   
    @section scripts{
        <script>
            $("#btnFileUpload").click(function () {
                $("#dvFileUpload").modal("show");
            });

            $("#btnLuuFile").click(function () {
                var tbody = $("#tblFile").find("tbody");
                var row = "";
                row = "<tr>";
                row += "<td>file</td>";
                row += "<td>" + $("#fuFile").val() + "</td>";
                row += "<td>" + $("#inputMoTa").val() + "</td>";
                row += "<td><button type='button' class='btn btn-link btn-sm btnRemoveFile'><i class='fas fa-times text-danger'></i></button></td>";
                row += "</tr>";
                tbody.append(row);

                $("#dvFileUpload").modal("hide");
            });

            $(document).on("click", ".btnRemoveFile", function () {
                $(this).closest("tr").remove();
            });
        </script>
    }
}