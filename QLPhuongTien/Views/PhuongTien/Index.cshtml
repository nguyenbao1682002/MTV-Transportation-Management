@model IEnumerable<QLPhuongTien.Models.PhuongTien>

@{
    ViewBag.Title = "Phương tiện";
    ViewBag.PageTitle = "Phương tiện";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using QLPhuongTien.Models
<div class="card card-info">
    <div class="card-header">
        <span class="card-title">
            Điều kiện
        </span>
    </div>
    

    <div class="card-body">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <div class="d-flex justify-content-center">
                <label class="col-form-label col-form-label-sm">
                    Đơn vị sử dụng
                </label>
                <div class="ml-2">
                    <select class="form-control form-control-sm">
                    </select>
                </div>

                <label class="col-form-label col-form-label-sm ml-4">
                    Loại phương tiện
                </label>
                <div class="ml-2">
                    <select class="form-control form-control-sm">
                    </select>
                </div>


                <div class="ml-4">
                    <button type="submit" class="btn btn-primary"><i class="fas fa-search"></i></button>
                </div>

            </div>
        }
    </div>
</div>


<div class="card">
    <div class="card-body">
        <div class="col-md-12 text-right">
            @Html.ActionLink("Tạo Mới", "PhuongTienInfo", "PhuongTien", new { bks = "" }, new { @class = "btn btn-danger" })

        </div>
        <div class="table-responsive mt-2">

            <table class="table table-hover table-striped">
                <thead>
                    <tr>
                        <th>STT</th>
                        <th>
                            @Html.DisplayNameFor(model => model.BKS)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.MA_LOAI_PTIEN)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.TEN_PTIEN)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.NGAY_HLUC)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.MA_TSAN)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.GHI_CHU)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        int i = 0;
                        foreach (var item in Model)
                        {
                            i = i + 1;
                            <tr>
                                <td>@i</td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.BKS)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.MA_LOAI_PTIEN)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.TEN_PTIEN)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.NGAY_HLUC)
                                </td>

                                <td>
                                    @Html.DisplayFor(modelItem => item.MA_TSAN)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.GHI_CHU)
                                </td>
                                    <td>
                                        @Html.ActionLink("Sửa", "PhuongTienInfo", "PhuongTien", new { BKS = item.BKS }, new { @class = "btn btn-link" })

                                    </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
