@model QLPhuongTien.Models.TaiKhoanModel
@{
    Layout = null;

}

<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Đăng nhập</title>
    <link href="~/Content/all.min.css" rel="stylesheet" />
    <link href="~/Content/adminlte.css" rel="stylesheet" />

</head>
<body class="hold-transition login-page">
    <div class="login-box">
        <!-- /.login-logo -->
        <div class="card card-outline card-primary">
            <div class="card-header text-center">
                <a href="../../index2.html" class="h1">QL <b>PTVT</b></a>
            </div>
            <div class="card-body">
                <p class="login-box-msg">Đăng nhập bằng tài khoản E-Office</p>

                @using (Html.BeginForm("DangNhap", "Home", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()
                    <div class="input-group mb-3">
                        @Html.TextBoxFor(tk => tk.username, new { @class = "form-control", @placeholder = "Tên đăng nhập", @autofocus = "autofocus", value="admin" })
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-envelope"></span>
                            </div>
                        </div>
                    </div>
                    <div class="input-group mb-3">
                        @Html.PasswordFor(tk => tk.password, new { @class = "form-control", @placeholder = "Mật khẩu", value="123" })
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-lock"></span>
                            </div>
                        </div>
                    </div>
                    <div class="text-center">
                        @ViewBag.info
                    </div>
                    <div class="d-flex justify-content-center">                        
                        <button type="submit" class="btn btn-primary btn-block">Sign In</button>
                    </div>

                }



            </div>
            <!-- /.card-body -->
        </div>
        <!-- /.card -->
    </div>
    <!-- /.login-box -->

    <script>

    </script>
</body>
</html>
