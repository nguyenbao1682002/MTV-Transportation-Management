@model QLPhuongTien.Models.LoaiPhuongTienModel

@{
    ViewBag.Title = "Chi tiết Loại phương tiện";
    ViewBag.PageTitle = "Chi tiết Loại phương tiện";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div>
    @Html.ActionLink("Trở lại danh sách", "Index")
</div>
<hr />
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
<div class="col-md-12">

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group row">
        @Html.LabelFor(model => model.ma_loai_ptien, htmlAttributes: new { @class = "col-form-label col-md-3 text-md-right" })
        <div class="col-md-3">
            @Html.EditorFor(model => model.ma_loai_ptien, new { htmlAttributes = new { @class = "form-control", @maxlength = 10,@id = "ma_loai_ptien" } })
            @Html.ValidationMessageFor(model => model.ma_loai_ptien, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group row">
        @Html.LabelFor(model => model.ten_loai_ptien, htmlAttributes: new { @class = "col-form-label col-md-3 text-md-right" })
        <div class="col-md-9">
            @Html.EditorFor(model => model.ten_loai_ptien, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.ten_loai_ptien, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group row">
        @Html.LabelFor(model => model.stt, htmlAttributes: new { @class = "col-form-label col-md-3 text-md-right" })
        <div class="col-md-9">
            @Html.EditorFor(model => model.stt, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.stt, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group row">
        @Html.LabelFor(model => model.nguoi_nhap, htmlAttributes: new { @class = "col-form-label col-md-3 text-md-right" })
        <div class="col-md-9">
            @Html.EditorFor(model => model.nguoi_nhap, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
            @Html.ValidationMessageFor(model => model.nguoi_nhap, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group row">
        @Html.LabelFor(model => model.ngay_nhap, htmlAttributes: new { @class = "col-form-label col-md-3 text-md-right" })
        <div class="col-md-9">
            @Html.EditorFor(model => model.ngay_nhap, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
            @Html.ValidationMessageFor(model => model.ngay_nhap, "", new { @class = "text-danger" })
        </div>
    </div>
    <script>
        // Disable editing for the textbox
        document.getElementById("ma_loai_ptien").readOnly = true;
    </script>
    <div class="form-group row">
        <div class="offset-md-3 col-md-9">
            <input type="submit" name="action" value="Lưu" class="btn btn-danger" />
            <input type="submit" name="action" value="Xóa" class="btn btn-danger" onclick="return confirm('Xóa dữ liệu?');" />
        </div>
    </div>
</div>
}


