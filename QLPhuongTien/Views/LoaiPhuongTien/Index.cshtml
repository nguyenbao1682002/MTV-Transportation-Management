@{
    ViewBag.Title = "Loại phương tiện";
    ViewBag.PageTitle = "Loại phương tiện";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model List<QLPhuongTien.Models.LoaiPhuongTienModel>

<div class="card">
    <div class="card-body">
        <div class="col-md-12 text-right">
            <a href=@Url.Action("Edit") class="btn btn-danger">
                <i class="fas fa-plus"></i>
            </a>
        </div>
        <div class="table-responsive mt-2">
            <table class="table table-hover table-striped">
                <thead>
                    <tr>
                        <th>STT</th>
                        <th>Mã loại</th>
                        <th>Tên loại</th>
                        <th>Số TT</th>
                        <th>Ngày tạo</th>
                        <th>Người tạo</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @for (int i = 0; i < Model.Count; i++)
                    {
                        <tr>
                            <td>@(i+1)</td>
                            <td>@Html.DisplayFor(m => Model[i].ma_loai_ptien) </td>
                            <td>@Html.DisplayFor(m => Model[i].ten_loai_ptien)</td>
                            <td>@Html.DisplayFor(m => Model[i].stt)</td>
                            <td>@Html.DisplayFor(m => Model[i].ngay_nhap) </td>
                            <td>@Html.DisplayFor(m => Model[i].nguoi_nhap)</td>
                            <td>
                                <a class="btn btn-link" href=@Url.Action("Edit",new {ma_loai_ptien= Model[i].ma_loai_ptien})>
                                    <i class="fas fa-edit"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>


